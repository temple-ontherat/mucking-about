<body>
<input id="myInput" type="text" onkeydown="press(event)"  /><br>
<input id="myinput" type="button" id="myInput" onclick="doSomething()" value="submit" name="click"/>
<h1 id="response"></h1> 
<script>
display="";   
document.getElementById("response").innerHTML=display; // Do something
function press( e ) {
    var evt = event || window.event
    // "e" is the standard behavior (FF, Chrome, Safari, Opera),
    // while "window.event" (or "event") is IE's behavior
    if ( evt.keyCode === 13 ) {
       let display=document.getElementById("myInput").value;
       document.getElementById("response").innerHTML=display; // Do something
       document.getElementById("myInput").value=""; // clear box

        // You can disable the form submission this way:
        return false;
    }
}
function doSomething() {
    let display=document.getElementById("myInput").value;
    document.getElementById("response").innerHTML=display; // Do something
    document.getElementById("myInput").value=""; // clear box

}
</script>
</body>
